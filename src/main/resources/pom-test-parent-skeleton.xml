<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>io.quarkus</groupId>
    <artifactId>quarkus-main-tests</artifactId>
    <version>{{quarkus-project-version}}</version>
    <packaging>pom</packaging>
    <name>Quarkus Main project tests</name>
    <description>Contains tests extracted from Quarkus main project</description>

    <properties>
        <quarkus.platform.group-id>io.quarkus</quarkus.platform.group-id>
        <quarkus.platform.artifact-id>quarkus-bom</quarkus.platform.artifact-id>
        <quarkus.platform.version>{{quarkus-project-version}}</quarkus.platform.version>
        <!-- community dependencies exist because some artifacts won't exist with the product version -->
        <quarkus.community.group-id>$USE-EXTRACTED-PROPERTIES{quarkus.platform.group-id}</quarkus.community.group-id>
        <quarkus.community.artifact-id>$USE-EXTRACTED-PROPERTIES{quarkus.platform.artifact-id}</quarkus.community.artifact-id>
        <quarkus.community.version>$USE-EXTRACTED-PROPERTIES{quarkus.platform.version}</quarkus.community.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>$USE-EXTRACTED-PROPERTIES{quarkus.platform.group-id}</groupId>
                <artifactId>$USE-EXTRACTED-PROPERTIES{quarkus.platform.artifact-id}</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{quarkus.platform.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- integration test module used by other integration tests  -->
            <dependency>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-integration-test-class-transformer-deployment</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-integration-test-class-transformer</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{project.version}</version>
            </dependency>
            <!-- test extensions used by other extensions but not managed by Quarkus BOM or in the central repo  -->
            <dependency>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-arc-test-supplement</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-security-test-utils</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-junit5</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>extensions</id>
            <activation>
                <property>
                    <name>extensions</name>
                    <value>true</value>
                </property>
            </activation>
            <modules>
                <!-- to be generated -->
            </modules>
        </profile>
        <profile>
            <id>integration-tests</id>
            <activation>
                <property>
                    <name>integration-tests</name>
                    <value>true</value>
                </property>
            </activation>
            <modules>
                <!-- to be generated -->
            </modules>
        </profile>
        <profile>
            <id>native</id>
            <activation>
                <property>
                    <name>native</name>
                </property>
            </activation>
            <properties>
                <skipITs>false</skipITs>
                <quarkus.native.enabled>true</quarkus.native.enabled>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>$USE-EXTRACTED-PROPERTIES{quarkus.platform.group-id}</groupId>
                <artifactId>quarkus-maven-plugin</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{quarkus-maven-plugin.version}</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>build</goal>
                            <goal>generate-code</goal>
                            <goal>generate-code-tests</goal>
                            <goal>native-image-agent</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{version.compiler.plugin}</version>
                <configuration>
                    <parameters>true</parameters>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{version.surefire.plugin}</version>
                <configuration>
                    <systemPropertyVariables>
                        <java.util.logging.manager>org.jboss.logmanager.LogManager</java.util.logging.manager>
                        <maven.home>$USE-EXTRACTED-PROPERTIES{maven.home}</maven.home>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>$USE-EXTRACTED-PROPERTIES{version.failsafe.plugin}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <systemPropertyVariables>
                        <native.image.path>$USE-EXTRACTED-PROPERTIES{project.build.directory}/$USE-EXTRACTED-PROPERTIES{project.build.finalName}-runner</native.image.path>
                        <java.util.logging.manager>org.jboss.logmanager.LogManager</java.util.logging.manager>
                        <maven.home>$USE-EXTRACTED-PROPERTIES{maven.home}</maven.home>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
